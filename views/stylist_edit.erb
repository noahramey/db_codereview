<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center blue-text text-lighten-1">Edit <%= @stylist.name() %></h1>
      <div class="row center">
        <h5 class="header col s12 blue-text text-lighten-2">An app that shows you the stylists you have working for you, as well as the clients your company has gathered. View stylists, clients, and more to come!</h5>
      </div>
      <div class="row center">
        <a href="/stylists" id="download-button" class="btn-large waves-effect waves-light blue lighten-1">View Stylists</a>
        <a href="/clients" id="download-button" class="btn-large waves-effect waves-light blue lighten-1">View Clients</a>
      </div>
      <br><br>

    </div>
  </div>
  <div class="parallax"><img src="<%= url('img/background1.jpg') %>" alt="Unsplashed background img 1"></div>
</div>

<div class="row container">
  <form class="col s12" action="/stylists/<%= @stylist.id() %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="row">
      <div class="input-field col s6">
        <input type="text" placeholder="Edit the Stylist's Name" name="name" id="name" class="validate">
        <label for="name"></label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit">Update
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
